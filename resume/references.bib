	keywords = {Animals, Bacterial, DNA, Gene Transfer, Genome, Gram-Negative Bacteria, Horizontal, Molecular Sequence Data, Open Reading Frames, Phylogeny, Placozoa, Rickettsiaceae, Symbiosis, classification, genetics, isolation \& purification, microbiology, physiology},
	pages = {621--645},
