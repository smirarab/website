	journal = {Journal of virology},
	author = {Shankarappa, R and Margolick, J B and Gange, S J and Rodrigo, A G and Upchurch, D and Farzadegan, H and Gupta, P and Rinaldo, C R and Learn, G H and He, X and Huang, X L and Mullins, J I},
