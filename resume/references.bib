	journal = {PloS one},
	author = {Cornet, Luc and Meunier, Loïc and Van Vlierberghe, Mick and Léonard, Raphaël R and Durieu, Benoit and Lara, Yannick and Misztak, Agnieszka and Sirjacobs, Damien and Javaux, Emmanuelle J and Philippe, Hervé and Wilmotte, Annick and Baurain, Denis},
