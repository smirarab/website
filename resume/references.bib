	pmid = {23925510},
	keywords = {Classification, Classification: methods, Computer Simulation, Cyanobacteria, Cyanobacteria: classification, Cyanobacteria: genetics, Phylogeny, Reproducibility of Results, Sequence Analysis, DNA},
	pages = {901--12},
}

