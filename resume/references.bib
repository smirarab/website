	journal = {BMC Evolutionary Biology},
	author = {Gandara, Ana Caroline Paiva and Torres, André and Bahia, Ana Cristina and Oliveira, Pedro L. and Schama, Renata},
	month = dec,
	year = {2017},
	pmid = {28356077},
