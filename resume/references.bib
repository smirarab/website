@article{Addison2015,
	title = {The unsolved challenge to phylogenetic correlation tests for categorical characters},
	volume = {64},
	issn = {1076836X},
	doi = {10.1093/sysbio/syu070},
	abstract = {When comparative biologists observe that animal{\textbackslash}nspecies living in caves also tend to have reduced eyes,{\textbackslash}nthey may see such correlation as evidence that the{\textbackslash}ntraits are adaptively or functionally linked: for instance,{\textbackslash}nselection to maintain eye function is relaxed when light{\textbackslash}nis unavailable. Such cross-species correlations cannot{\textbackslash}ngive definitive tests of evolutionary mechanisms, but{\textbackslash}nnonetheless offer important insights into biological{\textbackslash}nrelationshipsamongtraits in realms as diverse as ecology{\textbackslash}n(e.g., Paradis et al. 1998; Purvis et al. 2000) and genomics{\textbackslash}n(e.g., von Mering et al. 2002; Barker and Pagel 2005).{\textbackslash}nHowever, the last few decades have taught us that{\textbackslash}namong-species correlative tests should take into account{\textbackslash}nevolutionary relationships (Felsenstein 1985; Ridley{\textbackslash}n1989; Harvey and Pagel 1991). If phylogeny is not{\textbackslash}ntaken into account, an interpreted correlation may{\textbackslash}nhave a trivial explanation different from the biological{\textbackslash}nrelationship we claim. There is a correlation among{\textbackslash}nspecies in the distribution of fur and bones in the middle{\textbackslash}near--species with fur also have three bones in the middle{\textbackslash}near, and vice versa. These two traits are characteristics{\textbackslash}nof mammals, and absent outside the mammals. Using{\textbackslash}ntheir shared distribution as evidence of an interesting{\textbackslash}nbiological relationship between fur and middle ear bones{\textbackslash}nwould be considered a mistake, however, for reasons{\textbackslash}nunderstood long ago by Darwin (1872):{\textbackslash}nWe may often falsely attribute to correlated{\textbackslash}nvariation structures which are common to{\textbackslash}nwhole groups of species, and which in truth{\textbackslash}nare simply due to inheritance; for an ancient{\textbackslash}nprogenitor may have acquired through{\textbackslash}nnatural selection some one modification{\textbackslash}nin structure, and, after thousands of{\textbackslash}ngenerations, some other and independent{\textbackslash}nmodification; and these two modifications,{\textbackslash}nhaving been transmitted to a whole group{\textbackslash}nof descendants with diverse habits, would{\textbackslash}nnaturally be thought to be in some necessary{\textbackslash}nmanner correlated.{\textbackslash}nIn modern vocabulary,wewould say that the thousands{\textbackslash}nof species of mammals are not statistically independent{\textbackslash}nbecause of their shared history (Felsenstein 1985; Ridley{\textbackslash}n1989), instead being pseudoreplicates. Many methods{\textbackslash}nhave been developed to avoid pseudoreplication while{\textbackslash}nassessing cross-species correlations by accounting{\textbackslash}nfor phylogenetic relationships (e.g., Felsenstein 1985;{\textbackslash}nMaddison 1990; Harvey and Pagel 1991; Garland et al.{\textbackslash}n1992;Pagel 1994;ReadandNee 1995;MartinsandHansen{\textbackslash}n1997; Huelsenbeck et al. 2003; Hadfield and Nakagawa{\textbackslash}n2010). These phylogenetically aware correlation methods{\textbackslash}nhave been applied with enthusiasm, although there have{\textbackslash}nbeen skeptics questioning their need (Westoby 1999) and{\textbackslash}ncautions expressed over their use (Ricklefs and Starck{\textbackslash}n1996; Freckleton 2009).{\textbackslash}nNot all is healthy with the paradigm, however.{\textbackslash}nFor categorical characters a special concern has been{\textbackslash}nraised: commonly used and well-respected methods{\textbackslash}n(e.g., Pagel 1994), do not eliminate pseudoreplication,{\textbackslash}nas they are susceptible to an effect from a single{\textbackslash}nevolutionary event (Maddison 1990, 2000; Read and Nee{\textbackslash}n1995; Ridley and Grafen 1996; Grafen and Ridley 1997).{\textbackslash}nAs a result, a significant statistical association between{\textbackslash}ntraits inferred by these methods can mean very little{\textbackslash}nin some circumstances, misleading biologists about the{\textbackslash}nrelationship between traits.{\textbackslash}nAlthough this concern has been raised, there has been{\textbackslash}nlittle effect on the practice of comparative studies, we{\textbackslash}nthink because the issue has not been well understood.{\textbackslash}nWe do not, alas, have a solution. Our purpose here is{\textbackslash}nto explore the issue in depth in part to bring caution{\textbackslash}nto comparative studies, in part to characterize how{\textbackslash}nour methods should behave in hopes of provoking{\textbackslash}nappropriate solutions.},
	number = {1},
	journal = {Systematic Bio.},
	author = {Addison, Wayne P M and Fitzjohn, Richard G.},
	year = {2015},
	pmid = {25209222},
	note = {ISBN: 1076-836X (Electronic){\textbackslash}r1063-5157 (Linking)},
	pages = {127--136},
}

