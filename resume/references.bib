	author = {Vrancken, Bram and Rambaut, Andrew and Suchard, Marc A. and Drummond, Alexei and Baele, Guy and Derdelinckx, Inge and Van Wijngaerden, Eric and Vandamme, Anne-Mieke and Van Laethem, Kristel and Lemey, Philippe},
