	journal = {BMC genomics},
	author = {Rustagi, Navin and Zhou, Anbo and Watkins, W Scott and Gedvilaite, Erika and Wang, Shuoguo and Ramesh, Naveen and Muzny, Donna and Gibbs, Richard A and Jorde, Lynn B and Yu, Fuli and Xing, Jinchuan},
