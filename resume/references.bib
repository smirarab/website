	note = {ISBN: 1055-7903},
	keywords = {Algorithms, Bayes Theorem, Bayesian inference, Coalescence, Computer Simulation, DNA, Gene tree, Genetic, Genetic Variation, Likelihood Functions, Maximum likelihood, Models, Phylogeny, Sequence Analysis, Species tree, Uncertainty},
	pages = {501--509},
