@article{Burleigh2004,
	title = {Phylogenetic signal in nucleotide data from seed plants: implications for resolving the seed plant tree of life},
	volume = {91},
	issn = {00029122},
	url = {http://doi.wiley.com/10.3732/ajb.91.10.1599},
