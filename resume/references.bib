@article{Huang2010,
	title = {Sources of {Error} {Inherent} in {Species}-{Tree} {Estimation}: {Impact} of {Mutational} and {Coalescent} {Effects} on {Accuracy} and {Implications} for {Choosing} among {Different} {Methods}},
