	journal = {Molecular Phylogenetics and Evolution},
	author = {Springer, Mark S. and Gatesy, John},
	month = jan,
	year = {2016},
	pmid = {26238460},
	note = {Publisher: Elsevier Inc.
ISBN: 1095-9513 (Electronic){\textbackslash}r1055-7903 (Linking)},
	keywords = {ASTRAL, Accurate Species TRee ALgorithm, C-gene, CUs, Concatalescence, Deep coalescence, GTR, Gene tree, ILS, ML, MP-EST, MY, MYA, NNI, RF distance, Robinson-Foulds distance, SNPs, SPR, STAR, Species tree, TBR, UCEs, basepairs, bp, c-gene, coalescence gene, coalescent units, general time reversible, incomplete lineage sorting, maximum likelihood, maximum pseudo-likelihood for estimating species t, million years, million years ago, nearest neighbor interchange, single nucleotide polymorphisms, species tree estimation using average ranks of coa, subtree pruning and regrafting, tree bisection and reconnection, ultra-conserved elements},
