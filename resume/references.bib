	journal = {Molecular biology and evolution},
	author = {Yang, Ya and Moore, Michael J and Brockington, Samuel F and Soltis, Douglas E and Wong, Gane Ka-Shu and Carpenter, Eric J and Zhang, Yong and Chen, Li and Yan, Zhixiang and Xie, Yinlong and Sage, Rowan F and Covshoff, Sarah and Hibberd, Julian M and Nelson, Matthew N and Smith, Stephen A},
