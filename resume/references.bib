	year = {2013},
	note = {Place: Department of Computer Science, The University of Texas at Austin, Austin, Texas 78712, USA.
ISBN: 9781627480161},
	keywords = {Clique, Gene duplication and loss, Incomplete lineage sorting},
	pages = {250--261},
}

@article{Reid2012,
	title = {Phylogenetic estimation error can decrease the accuracy of species delimitation: a {Bayesian} implementation of the general mixed {Yule}-coalescent model.},
