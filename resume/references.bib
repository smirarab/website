@article{Mayer2011,
	title = {Horizontal gene transfer of microbial cellulases into nematode genomes is associated with functional assimilation and gene turnover.},
	volume = {11},
	issn = {1471-2148},
	url = {http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=3032686&tool=pmcentrez&rendertype=abstract},
	doi = {10.1186/1471-2148-11-13},
	abstract = {BACKGROUND: Natural acquisition of novel genes from other organisms by horizontal or lateral gene transfer is well established for microorganisms. There is now growing evidence that horizontal gene transfer also plays important roles in the evolution of eukaryotes. Genome-sequencing and EST projects of plant and animal associated nematodes such as Brugia, Meloidogyne, Bursaphelenchus and Pristionchus indicate horizontal gene transfer as a key adaptation towards parasitism and pathogenicity. However, little is known about the functional activity and evolutionary longevity of genes acquired by horizontal gene transfer and the mechanisms favoring such processes.

