	issn = {0737-4038},
	url = {https://academic.oup.com/mbe/article-lookup/doi/10.1093/molbev/msw079},
	doi = {10.1093/molbev/msw079},
	abstract = {Species tree reconstruction is complicated by effects of Incomplete Lineage Sorting (ILS), commonly modeled by the multi-species coalescent model. While there has been substantial progress in developing methods that estimate a species tree given a collection of gene trees, less attention has been paid to fast and accurate methods of quantifying support. In this paper, we propose a fast algorithm to compute quartet-based support for each branch of a given species tree with regard to a given set of gene trees. We then show how the quartet support can be used in the context of the multi-species coalescent model to compute i) the local posterior probability that the branch is in the species tree and ii) the length of the branch in coalescent units. We evaluate the precision and recall of the local posterior probability on a wide set of simulated and biological datasets, and show that it has very high precision and improved recall compared to multi-locus bootstrapping. The estimated branch lengths are highly accurate when gene tree estimation error is low, but are underestimated when gene tree estimation error increases. Computation of both the branch length and the local posterior probability is implemented as new features in ASTRAL.},
	number = {7},
	journal = {Molecular Biology and Evolution},
	author = {Sayyari, Erfan and Mirarab, Siavash},
	month = jul,
	year = {2016},
	pmid = {27189547},
	keywords = {ASTRAL, Incomplete lineage sorting, astral, branch length estimation., incomplete lineage sorting, local support, multi-species coalescent, posterior probability, quartet-based methods},
	pages = {1654--1668},
}

@article{polytomy,
