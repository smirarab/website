	author = {Sayyari, Erfan and Mirarab, Siavash},
	month = feb,
	year = {2018},
	note = {Publisher: Multidisciplinary Digital Publishing Institute},
	keywords = {incomplete lineage sorting, multi, multifurcation, phylogenomics, polytomy, species coalescent model, statistical test, summary methods},
	pages = {132},
}

@article{distique,
