	journal = {Proceedings of the National Academy of Sciences},
	author = {Mirarab, Siavash and Rivas-González, Iker and Feng, Shaohong and Stiller, Josefin and Fang, Qi and Mai, Uyen and Hickey, Glenn and Chen, Guangji and Brajuka, Nadolina and Fedrigo, Olivier and Formenti, Giulio and Wolf, Jochen B. W. and Howe, Kerstin and Antunes, Agostinho and Schierup, Mikkel H. and Paten, Benedict and Jarvis, Erich D. and Zhang, Guojie and Braun, Edward L.},
